<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    android:layout_width="250dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/white_pressed"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="138dp">

    <TextView
        android:id="@+id/idea_main_way"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="?attr/spec_color"

        android:textStyle="bold"
        android:text="Охрана Т."
        android:gravity="center"
        android:background="@drawable/idea_up_shape"/>

    <TextView
        android:id="@+id/idea_text_body"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="43dp"
        android:layout_marginHorizontal="@dimen/padding_10"
        android:paddingHorizontal="@dimen/padding_10"
        android:textColor="?attr/spec_color"
        android:maxLines="3"
        android:text=""
        />


    <TextView
        android:id="@+id/idea_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/ic_like"
        android:textSize="15sp"
        android:text="222"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingRight="13dp"/>
</RelativeLayout>

</androidx.cardview.widget.CardView>